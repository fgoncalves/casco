<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="MainText">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="CardViewTitle">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="CardViewCaption">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/card_caption_text_size</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="CardViewDescriptionText">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/card_description_text_size</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
</resources>
